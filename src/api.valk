
use valk:http
use valk:json

fn host() String {
    #if is_defined(DEV)
    return "http://localhost:9123"
    #else
    return "https://valk-lang.dev"
    #end
}

fn api_get_versions() json:Value !err {
    let resp = http:request("GET", host() + "/api/versions") ! throw err
    return json:decode(resp.body) ! throw err
}
